{
  "manifest_version": 3,
  "name": "ExplainIt AI",
  "version": "1.0.0",
  "description": "Instantly simplify, summarize, and translate complex online content using Chrome's built-in AI APIs. Works offline and privately.",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "origin_trials": {
    "regular": "AiDirMIqrQXrlw+irKHqHTUo8//hxIBd8ZWVRCIPK5Bm0YiXQlAYAPFTGmqhVGq5H9Oq4GbM8NF2SdAMU03I9wEAAAB7eyJvcmlnaW4iOiJjaHJvbWUtZXh0ZW5zaW9uOi8vYW9vb21kZ2VuYmpiY2xnZ2lpam5nbGFsamtwZm1kbGkiLCJmZWF0dXJlIjoiQUlQcm9tcHRBUElNdWx0aW1vZGFsSW5wdXQiLCJleHBpcnkiOjE3NzQzMTA0MDB9"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "ExplainIt AI - Open Side Panel"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles.css", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open ExplainIt AI side panel"
    }
  },
  "minimum_chrome_version": "127",
  "offline_enabled": true
}